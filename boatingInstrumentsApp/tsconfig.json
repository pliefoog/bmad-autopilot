{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "react-native"
    ],
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@mobile/*": [
        "mobile/*"
      ],
      "@desktop/*": [
        "desktop/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
