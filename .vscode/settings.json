{
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 15,
  "github.copilot.chat.agent.runTasks": true,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "github.copilot.chat.agent.autoFix": true,
  "chat.tools.autoApprove": false,

  // MEMORY OPTIMIZATION: Reduce TypeScript server memory from 3GB to 2GB each
  "typescript.tsserver.maxTsServerMemory": 2048,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,

  // Story 11.7: VS Code Test Explorer Integration - Professional Test Tooling
  "jest.rootPath": "./boatingInstrumentsApp",
  "jest.runMode": {
    "type": "on-demand"
  },
  "jest.coverageColors": {
    "covered": "rgba(9, 156, 65, 0.4)",
    "uncovered": "rgba(221, 46, 68, 0.2)",
    "partially-covered": "rgba(255, 152, 0, 0.2)"
  },
  "jest.enable": true,

  // AC1: Professional Test Documentation Display in Test Explorer (OPTIMIZED: only when explicitly running tests)
  "testing.openTesting": "neverOpen",
  "testing.followRunningTest": false,
  "testing.defaultGutterClickAction": "run",
  "testing.showAllMessages": true,

  // AC2: Real-time Coverage Visualization (OPTIMIZED: on-demand only to save memory)
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "cov.xml",
    "coverage.xml",
    "jacoco.xml",
    "coverage/vscode-coverage-overlay.json"
  ],
  "coverage-gutters.showLineCoverage": false,
  "coverage-gutters.showBranchCoverage": false,
  "coverage-gutters.highlightDark": "rgba(255, 0, 0, 0.3)",
  "coverage-gutters.highlightLight": "rgba(255, 0, 0, 0.2)",

  // AC3: Simulator Connection Status in Test Explorer UI
  "testing.gutterEnabled": true,

  // AC4: Performance Monitoring Integration (OPTIMIZED: debug mode disabled for memory)
  "jest.debugMode": false,
  "jest.enableInlineErrorMessages": false,
  "jest.showTerminalOnLaunch": false,
  "jest.autoRun": "off",

  // AC5: Development Workflow Enhancement - Test categorization and execution
  "testing.saveBeforeTest": true,
  "testing.automaticallyOpenTestResults": "neverOpen",
  "files.associations": {
    "*.test.ts": "typescript",
    "*.integration.test.ts": "typescript",
    "*.e2e.test.ts": "typescript"
  },

  // Marine domain-specific test execution indicators
  "workbench.colorCustomizations": {
    "testing.iconFailed": "#ff6b6b",
    "testing.iconErrored": "#ffa500",
    "testing.iconPassed": "#51cf66",
    "testing.iconQueued": "#74c0fc",
    "testing.iconSkipped": "#868e96",
    "testing.iconUnset": "#adb5bd"
  },

  // MEMORY OPTIMIZATION: Reduce file watching overhead
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.metro-cache/**": true,
    "**/ios/build/**": true,
    "**/ios/Pods/**": true,
    "**/android/build/**": true
  },

  // MEMORY OPTIMIZATION: Reduce search indexing
  "search.followSymlinks": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/ios/Pods": true,
    "**/ios/build": true,
    "**/.metro-cache": true
  },

  // MEMORY OPTIMIZATION: Git performance
  "git.untrackedChanges": "hidden",
  "git.autorefresh": false,
  "chat.useAgentSkills": true
}